{
	"schemaVersion": 1,
	"id": "shulker-broker",
	"version": "${version}",
	"name": "Shulker Broker",
	"description": "A mod about a shulker who gave up fighting and is now storing and brokering your items",
	"authors": [
		"Me!"
	],
	"contact": {
		"homepage": "https://fabricmc.net/",
		"sources": "https://github.com/FabricMC/fabric-example-mod"
	},
	"license": "CC0-1.0",
	"icon": "assets/shulker-broker/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"com.lobster.ShulkerBroker"
		],
		"client": [
			"com.lobster.ShulkerBrokerClient"
		],
		"fabric-datagen": [
			"com.lobster.ShulkerBrokerDataGenerator"
		]
	},
	"mixins": [
		"shulker-broker.mixins.json",
		{
			"config": "shulker-broker.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.17.3",
		"minecraft": "~1.21.10",
		"java": ">=21",
		"fabric-api": "*"
	},
	"suggests": {
		"another-mod": "*"
	}
}